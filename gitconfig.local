[alias]
  l = log --pretty=colored
  lg = log --oneline --decorate --all --graph
  cb = checkout -b
  db = branch -d
  d  = diff
  ds = diff --staged
  s = status -s
  fuckit = !sh -c 'git add --all && git reset --hard'

[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset

[user]
  name = Matthew Sumner
  email = matt.m.sumner@gmail.com

[github]
  user = MattMSumner

[pull]
  rebase = true

[rerere]
  enabled = true
